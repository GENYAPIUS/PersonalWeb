@model  PersonalWeb.Models.Message

<div class="container margin-top-80px">
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-2">&nbsp;</div>
        <div class="col-8" style="background-color:lightslategrey">
            User..........<input type="text" id="userInput" />
            <br />
            Message...<input type="text" id="messageInput" />
            <input type="button" id="sendButton" value="Send Message" />
        </div>
        <div class="m-2">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    @foreach (var item in Model.Messages)
    {
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="float-left">@Html.DisplayFor(modelItem => item.Name)</div>
                <div class="float-right">@Html.DisplayFor(modelItem => item.DateTime)</div><br />
                <div>@Html.DisplayFor(modelItem => item.Comment)</div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-2">&nbsp;</div>
        <div class="col-8" id="messagesList">
        </div>
    </div>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
