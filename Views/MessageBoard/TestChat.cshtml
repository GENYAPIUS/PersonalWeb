@model PersonalWeb.Models.Message

<div class="container margin-top-80px">
    <div class="row">&nbsp;</div>
    <div class="row">
            <div class="col-2">&nbsp;</div>
            <div class="col-8" style="background-color:lightslategrey">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-controller="MessageBoard" asp-action="SendMessage">
                    <div class="form-group">
                        <label asp-for="Name"></label><input asp-for="Name" id="userInput" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <br />
                        <label asp-for="Comment"></label><input asp-for="Comment" id="messageInput" />
                        <span asp-validation-for="Comment" class="text-danger"></span>
                        <input type="submit" id="sendButton" value="SendMessage" />
                    </div>
                </form>
            </div>
        <div class="m-2">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-12">
            <hr />
        </div>
    </div>
    @foreach (var item in Model.Messages)
    {
        <div class="container">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8 chatbox">
                    <div class="float-left">使用者：@Html.DisplayFor(modelItem => item.Name)</div>
                    <div class="float-right">@Html.DisplayFor(modelItem => item.DateTime)</div><br />
                    <div class="col-12"><hr /></div>
                    <div>@Html.DisplayFor(modelItem => item.Comment)</div>
                </div>
            </div>
        </div>
        <br />
    }

    <div id="messagesList"></div>
    @*<div class="container">
        <div class="row">
            <div class="col-2">&nbsp;</div>
            <div class="col-8 chatbox" id="messagesList"></div>
        </div>
    </div>*@
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
